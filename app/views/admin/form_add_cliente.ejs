<!DOCTYPE html>
	<html lang="pt-br">
		<head>
			<meta charset="utf-8"/>
			<title>Formulário de cadastro de clientes</title>
		</head>
	<body>

		<h1>Adicionar cliente</h1>
		<br />

		<% if(validacao) { %>
			<ul>
				<% for(var i=0; i < validacao.length; i++){ %>
					<li><%= validacao[i].msg %></li>
				<% } %>
			</ul>

		<% } %>

		<form action="/clientes/salvar" method="post">

            <div>
            <label>Nome</label>
            <input type="text" name="nome" value="<%= cliente.nome %>">
            </div>

						<div>
						<label>Sobrenome</label>
						<input type="text" name="sobrenome" value="<%= cliente.sobrenome %>">
						</div>

						<div>
						<label>Data de Nascimento</label>
						<input type="date" name="data_nasc" value="<%= cliente.data_nasc %>">
						</div>

						<div>
						<label>CEP</label>
						<input type="text" name="cep" value="<%= cliente.cep %>">
						</div>

						<div>
            <label>Endereço</label>
            <input type="text" name="endereco" value="<%= cliente.endereco %>">
            </div>

						<div>
						<label>CPF</label>
						<input type="text" name="cpf" value="<%= cliente.cpf %>">
						</div>

            <input type="submit" value="Cadastrar">

    </form>

	</body>
</html>
